      border-bottom: 1px solid #ccc;
      margin-bottom: 0;
      padding-bottom: 20px;
    }

    h3 {
      font-family: $sans-serif-fonts;
      font-weight: 600;
      font-size: 19px;
      line-height: 22px;
    }

    p + p {
      margin-top: 10px;
    }

    .secret-url {
      font-family: $sans-serif-fonts;
      font-size: 20px;
      line-height: 22px;
      margin: 15px 0;
      
      @media screen and (min-width:640px){
        font-size: 24px;
        line-height: 26px;
      }

      a {
        display: block;
      }
    }
  }
}