$columnWidth: 40px;
$gutterWidth: 20px;

$mobilePortraitWidth: 320px;
$mobileLandscapeWidth: 480px;
$tabletPortraitWidth: 768px;
$tabletLandscapeWidth: 1024px;
$widescreenWidth: 1200px;

@function grid-span($units){
  @return ($units * $columnWidth) + (($units - 1) * $gutterWidth);
}

$serif-fonts: 'ff-tisa-web-pro', Georgia, serif;
$sans-serif-fonts: 'ff-dagny-web-pro', Helvetica, Arial, sans-serif;

@mixin clearfix {
  /* For modern browsers */
  &:before,
  &:after {
    content:"";
    display:table;
  }

  &:after {
    clear:both;
  }

  /* For IE 6/7 (trigger hasLayout) */
  & {
    zoom:1;
  }
}

@mixin fullFluidWidth {
  width: percentage(280/300);
  @media screen and (min-width: 320px){
    width: percentage(440/460);
  }
  @media screen and (min-width: 768px){
    width: percentage(728/748);
  }
}

.wf-loading * {
  visibility: hidden;
}

html, body {
  background: #f2f1f1;
  background-image: url('/assets/bg-stripe.png');
  background-image: url(<%= asset_data_uri 'bg-stripe.png' %>);
  text-shadow: 1px 1px 0 #fffcfc;
}

body {
  min-width: 320px;
  font-family: $sans-serif-fonts;
}

a {
  color: #71868C;
}

a:visited {
  color: darken(#71868C, 10%);
}

a:active {
  color: darken(#71868C, 20%);
}

.container {
  margin: 0 auto;
  width: percentage(300/320);
  @media screen and (min-width: 320px){
    width: percentage(460/480);
  }
  @media screen and (min-width: 768px){
    width: percentage(700/768);
  }
  @media screen and (min-width: 1024px){
    width: 940px;
  }
}

.group {
  @include clearfix;
}

label, input, select, textarea {
  font-family: $sans-serif-fonts;
}

.banner {
  padding: 40px 0;
  text-align: center;

  h1 {
    margin: 0 auto;
    font-size: 27px;
    line-height: 1.11em;
    
    @media screen and (min-width:768px){
      font-size: 36px;
      line-height: 1.11em;
    }
    @media screen and (min-width:940px){
      font-size: 40px;
      line-height: 1.11em;
      width: percentage(580/940);
    }
  }
  p {
    color: #666;
    font-weight: 300;
    font-family: $serif-fonts;
    font-size: 15px;
    line-height: 20px;
    margin: 10px auto 0;
    text-align: left;
    width: percentage(280/300);

    @media screen and (min-width: 320px){
      width: percentage(460/480);
    }
    @media screen and (min-width:768px){
      font-size: 19px;
      font-weight: 200;
      line-height: 1.33em;
      width: 580px;
    }
  }
  p a {
    white-space: nowrap;
  }
  .big-logo {
    margin-bottom: 10px;
  }
  img {
    width: 150px;
    @media screen and (min-width:640px){
      width: 200px;
    }
  }
}

.help-block {
  color: lighten(#000, 65%);
  line-height: 1.33em;
}

.field + .field {
  margin-top: 15px;
}

.section {
  @include clearfix;
  border-top: 1px solid #ccc;
  padding-top: 20px;
  padding-bottom: 20px;

  & + .section {
    margin-top: 25px;
  }
}

.section-info,
.section-body {
  @include fullFluidWidth;
  margin: 0 auto;
  @media screen and (min-width:768px){
    margin: 0;
  }
}

.section-info {
  padding-bottom: 15px;

  @media screen and (min-width:768px){
    float: left;
    width: percentage(220/700);
  }
  @media screen and (min-width: 940px){
    width: percentage(280/940);
  }
  
  h2 {
    font-family: $sans-serif-fonts;
    font-size: 24px;
    font-weight: 400;
    line-height: 26px;
    margin-bottom: 8px;
    margin-left: -2px;
  }
  p {
    color: #666;
    font-family: $serif-fonts;
    font-size: 15px;
    font-weight: 400;
    line-height: 20px;
    @media screen and (min-width: 940px){
      font-size: 17px;
      line-height: 1.33em;
    }
  }
  p + p {
    margin-top: 8px;
  }
}

@function grid-percentage($a, $b) {
  @return percentage(grid-span($a)/grid-span($b));
}

.section-body {
  @media screen and (min-width:768px){
    float: right;
    width: percentage( grid-span(8) / grid-span(12) );
  }
  @media screen and (min-width: 1024px){
    width: percentage( grid-span(11) / grid-span(16) );
  }
}

// White, rounded-corner answer areas

.answer-area {
  border: 1px solid #ccc;
  border-radius: 4px;
  background: #fff;
  box-shadow: 0 3px 3px rgba(#cccaca, 0.3);
  border-color: #ccc;
}

.answer-area-header {
  font-size: 15px;
  line-height: 16px;
  padding: 5px;
  border-bottom: 1px solid #bbb;

  h3 { display: inline; }
  a {
    font-size: 13px;
    padding: 10px 5px;
    text-decoration: none;
  }
}

// Obvious labels are obvious

.label-trigger {
  color: #444;
  display: block;
  text-decoration: none;

  &:hover {
    // background-color: mix(#fff, #ffa, 90%);
  }
  &:active {
    background-color: #e5e5e5;
    .label-text { background-color: transparent; }
  }
}

.obvious-label {
  & {
    border-bottom: 1px solid #eee;
    // color: #999;
    display: block;
    font-family: $sans-serif-fonts;
    font-size: 17px;
    line-height: 20px;
    padding: 10px;
    text-align: left;
    width: auto;
    input[type=checkbox]{
      font-size: 17px;
    }
  }
  &.checked {
    .label-text {
      background: mix(#fff, #ffa, 70%);
      color: #313131;
      text-shadow: 1px 1px 0 #fff;
    }
  }
  &:active {
    background-color: #e5e5e5;
    background-color: mix(#fff, #71868C, 85%);
    .label-text { background-color: transparent; }
  }
}

// Specific sections

.email-section {
  .help-block {
    margin-top: 7px;
  }
  input[type=text], select{
    width: percentage(270/280);
    height: 28px;
  }
  input[type=text]{
    font-size: 24px;
  }
  select {
    font-size: 20px;
    @media screen and (min-width:940px){
      font-size: 17px;
      margin-left: 6px;
      width: 220px;
    }
  }
  #party-guests { 
    margin-top: 20px;
    label {
      display: block;
      font-size: 17px;
      margin-bottom: 6px;
      line-height: 1.11em;
      @media screen and (min-width:940px){
        display: inline;
      }
    }
  }
}

.days-section {
  .answer-area {
    @include clearfix;
    margin: 0 -5px;
    padding: 5px;
  }
  .day-header {
    @extend .answer-area-header;

    @media screen and (min-width: 1024px) {
      .day-of-week, time {
        display: block;
        padding: 0 5px;
        line-height: 22px;
      }
      time {
        font-size: 22px;
      }
      a {
        display: block;
        padding: 10px 5px;
      }
    }
  }
  .day {
    margin-bottom: 15px;
    @media screen and (min-width: 1024px) {
      border-left: 1px solid #bbb;
      float: left;
      margin-bottom: 0;
      position: relative;
      width: 126px;

      &:nth-child(1) {
        width: 126px;
        border: 0;
      }
    }
  }
  label {
    @extend .obvious-label;
    @media screen and (min-width: 1024px){
      font-size: 14px;
    }
  }
  li:last-child {
    label {
      @media screen and (min-width: 1024px){
        border-bottom: 0;
      }
    }
  }
  input[type=checkbox]{
    width: 16px;
  }
}

.places-section {
  .places-list {
    @extend .answer-area;
    margin: 0 -5px;
    padding: 5px;
  }
  .checkbox-sections {
    @include clearfix;
  }
  .places-list-header {
    @extend .answer-area-header;
    padding: 10px;

    h3 {
      font-size: 17px;
    }
  }
  .places-list-section {
    @media screen and (min-width:1024px){
      float: left;
      width: 210px;
      &.notes-section {
        clear: both;
        float: none;
        width: auto;
      }
      &#drinks-section {
        width: 212px;
      }
    }
  }
  .places-list-section + .places-list-section {
    margin-top: 15px;
    @media screen and (min-width:1024px){
      margin-top: 0;
      &:first-child {
        margin-left: 0;
      }
    }
  }
  .places-list-section.notes-section {
    margin-top: 15px;
  }
  .notes {
    padding: 15px 10px 10px;
    textarea {
      min-height: 60px;
      padding: 5px;
      width: percentage(247/257);
      @media screen and (min-width:1024px){
        width: percentage(622/634);
      }
    }
  }
  ul {
    @include clearfix;
  }
  label {
    @extend .obvious-label;
    @media screen and (min-width:1024px){
      font-size: 15px;
    }
  }
}


// Ported from Twitter's Bootstrap stylesheet
@mixin triGradient($fromColor:#fff, $midColor:#fff, $colorStop:25%, $endColor:#e5e5e5) {
  background-color: $endColor;
  background-repeat: no-repeat;
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from($fromColor), color-stop($colorStop, $midColor), to($endColor));
  background-image: -webkit-linear-gradient($fromColor, $midColor $colorStop, $endColor);
  background-image: -moz-linear-gradient($fromColor, $midColor $colorStop, $endColor);
  background-image: -ms-linear-gradient($fromColor, $midColor $colorStop, $endColor);
  background-image: -o-linear-gradient($fromColor, $midColor $colorStop, $endColor);
  background-image: linear-gradient($fromColor, $midColor $colorStop, $endColor);
}

.btn {
  // @include fullFluidWidth;
  @include triGradient(#fff, #fff, 25%, #e5e5e5);
  cursor: pointer;
  display: inline-block;
  border: 1px solid #ccc;
  border-bottom-color: #bbb;
  border-radius: 4px;
  color: #333;
  font-size: 16px;
  font-weight: 500;
  line-height: 16px;
  padding: 10px 20px 12px;
  text-shadow: 0 1px 1px rgba(#fff, 0.75);

  &:hover {
    background-position: 0 -15px;
    color: #333;
    text-decoration: none;
  }

  // Focus state for keyboard and accessibility
  &:focus {
    outline: 1px dotted #666;
  }
}

.actions {
  border-top: 1px solid #ccc;
  margin-top: 20px;
  padding: 20px 0 80px;
  text-align: center;

  h3 {
    font-size: 20px;
    font-weight: 600;
    line-height: 24px;
    margin: 0 auto;
    width: percentage(240/300);
  }

  ul, p, li {
    font-family: $serif-fonts;
    font-size: 15px;
    line-height: 20px;
    margin: 10px auto;
    width: percentage(260/300);
  }

  ul {
    list-style-type: square;
    text-align: left;

    li {
      margin-left: 20px;
      width: auto;
    }
    li + li {
      margin-top: 5px;
    }

    @media screen and (min-width:768px) {
      width: percentage(grid-span(9) / 700px);
    }
  }

  p {
    margin: 20px auto;
  }

  .btn {
    margin-bottom: 10px;
    width: percentage(280/300);

    @media screen and (min-width: 320px){
      width: percentage(440/460);
    }
    @media screen and (min-width: 480px) {
      width: 200px;
      margin-bottom: 0;
    }
  }
}


